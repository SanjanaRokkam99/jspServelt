<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>loginAndRegistration</display-name>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.bridgelabz.service.RegisterServlets</servlet-class>
	</servlet>
	<servlet-mapping>

		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/RegisterServlets</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.bridgelabz.service.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>

		<servlet-name>login</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.bridgelabz.service.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>

		<servlet-name>logout</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>